file = {:home/andreas/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Memoli et al. - 2015 - Validation of the wild-type influenza a human challenge model H1N1pdMIST An A(H1N1) pdm09 dose-finding investigat.pdf:pdf},
issn = {15376591},
journal = {Clinical Infectious Diseases},
keywords = {Challenge,H1N1,Healthy volunteer,Influenza,Influenza A},
number = {5},
