doi = {10.1371/journal.pone.0103560},
file = {:home/andreas/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Hatagishi et al. - 2014 - Establishment and clinical applications of a portable system for capturing influenza viruses released through.pdf:pdf},
