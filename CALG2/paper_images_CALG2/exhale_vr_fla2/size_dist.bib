journal = {Journal of Aerosol Medicine: Deposition, Clearance, and Effects in the Lung},
keywords = {Bioaerosol,Droplet,Electron microscopy,Exhaled breath,Infection control,Particle size},
number = {2},
pages = {105--116},
title = {{The size distribution of droplets in the exhaled breath of healthy human subjects}},
