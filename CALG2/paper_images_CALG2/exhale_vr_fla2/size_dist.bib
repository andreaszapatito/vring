issn = {08942684},
journal = {Journal of Aerosol Medicine: Deposition, Clearance, and Effects in the Lung},
keywords = {Age,Coughed droplet,Droplet nuclei,Gender,Size distribution},
number = {4},
pages = {484--494},
title = {{The size and concentration of droplets generated by coughing in human subjects}},
